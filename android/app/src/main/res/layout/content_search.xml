<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="practice.chiefandroid.SearchActivity"
    tools:showIn="@layout/activity_search">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите нужные ингредиенты:" />

    <Spinner
        android:id="@+id/ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown" />

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:background="@drawable/plus_button_selector"
        android:onClick="addSpinner" />

    <Button
        android:id="@+id/findButton"

        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:onClick="findRecipe"
        android:background="@drawable/main_button"
        android:shadowColor="#F06292"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Искать"
        android:textColor="#FFFFFF" />

</LinearLayout>
